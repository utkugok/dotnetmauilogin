<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Maui.LoginPage"
             Title="LoginPage"
             Shell.NavBarIsVisible="True"
             xmlns:viewmodels="clr-namespace:LoginApp.Maui.ViewModels"
             x:DataType="viewmodels:LoginPageViewModel">

    <VerticalStackLayout>
        <Frame CornerRadius="50" WidthRequest="120" HeightRequest="120" Margin="0,20,0,0" Padding="0" 
               BorderColor="Green">

            <Image Source="user.png" WidthRequest="80" HeightRequest="80" VerticalOptions="Center" HorizontalOptions="Center">
            </Image>


            <Label Text="Sign In to continue" TextColor="Blue" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" Margin="0,60,0,0"></Label>

        </Frame>
    </VerticalStackLayout>
    
</ContentPage>